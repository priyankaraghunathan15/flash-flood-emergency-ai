# ============================================================================
# Flash Flood Emergency AI System - Environment Configuration
# ============================================================================

# ANTHROPIC API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# NANDA REGISTRY
NANDA_REGISTRY_URL=capregistry.duckdns.org:6900
NANDA_ORG_ID=group6-northeastern

# MONGODB
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DATABASE=nanda_crisis_response
MONGODB_COLLECTION_AGENT_FACTS=agent_facts
MONGODB_COLLECTION_EVENTS=events
MONGODB_COLLECTION_NANDA_INDEX=nanda_index

# AGENT DEPLOYMENT
AGENT_BASE_URL=http://your-server-ip-here
AGENT_START_PORT=6000

# Agent Ports (Detection Tier)
SOCIAL_MEDIA_SENTINEL_PORT=6000
ENVIRONMENTAL_MONITOR_PORT=6001
NEWS_ALERT_SCANNER_PORT=6002

# Agent Ports (Analysis Tier)
SITUATION_ASSESSOR_PORT=6003
RESOURCE_MAPPER_PORT=6004
PATTERN_ANALYZER_PORT=6005

# Agent Ports (Response Tier)
EMERGENCY_DISPATCHER_PORT=6006
PUBLIC_COMMUNICATOR_PORT=6007
MEDICAL_TRIAGE_PORT=6008

# Agent Ports (Command Tier)
MISSION_CONTROL_PORT=6009

# MCP SERVERS
EVACUATION_MCP_PORT=7000
WEATHER_MCP_PORT=7001
RESOURCE_MCP_PORT=7002
EVACUATION_MCP_URL=http://your-server-ip-here:7000
WEATHER_MCP_URL=http://your-server-ip-here:7001
RESOURCE_MCP_URL=http://your-server-ip-here:7002

# EXTERNAL APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
NEWS_API_KEY=your_news_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# LOGGING
LOG_LEVEL=INFO
LOG_DIR=./logs
ENABLE_TELEMETRY=true

# DEPLOYMENT
ENVIRONMENT=development
SERVER_HOST=0.0.0.0
SERVER_TIMEOUT=300

# SECURITY
AGENT_SECRET_KEY=your_random_secret_key_here
ENABLE_CORS=false
CORS_ALLOWED_ORIGINS=http://localhost:3000

# CRISIS RESPONSE
CRISIS_MONITORING_REGION=northeast_usa
FLOOD_ALERT_THRESHOLD_HIGH=8
FLOOD_ALERT_THRESHOLD_MEDIUM=5
FLOOD_ALERT_THRESHOLD_LOW=3
RESPONSE_TIMEOUT=40

# DEVELOPMENT (Optional)
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
TEST_DATA_DIR=./tests/test_data